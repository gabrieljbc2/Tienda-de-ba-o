<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__content">
                    <div class="contact__form">
                        <h5>Agregar Producto</h5>
                        <form id="agregarProductoForm" onsubmit="return agregarProducto()">
                            <input type="text" id="nombre" placeholder="Nombre" required>
                            <textarea id="descripcion" placeholder="Descripción" required></textarea>
                            <input type="url" id="imagen" placeholder="URL de la Imagen" required>
                            <select id="categoria" name="categoria" required>
                                <option value="">Seleccionar Categoría</option>
                                <option value="masculino">Masculino</option>
                                <option value="femenino">Femenino</option>
                                <option value="infantil">Infantil</option>
                                <option value="cosmetico">Cosmético</option>
                                <option value="accesorio">Accesorio</option>
                            </select>

                            <input type="number" id="precio" placeholder="Precio" required>

                            <input type="number" id="stock" placeholder="Stock" required>
                            <button type="submit" class="site-btn">Agregar Producto</button>
                            <button type="button" class="site-btn" onclick="cancelarAccion()">Cancelar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>