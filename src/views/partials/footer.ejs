                        <!-- Dentro del <ul> de opciones de cuenta -->
                        <li><a href="#" id="eliminarCuentaLink">Eliminar mi cuenta</a></li>
                        <script>
                            // Agregar un listener de evento 'DOMContentLoaded'
                            document.addEventListener('DOMContentLoaded', function () {
                                // Obtener referencia al enlace de eliminar cuenta
                                const eliminarCuentaLink = document.getElementById('eliminarCuentaLink');

                                // Agregar un listener de evento 'click' al enlace de eliminar cuenta
                                eliminarCuentaLink.addEventListener('click', function (event) {
                                    event.preventDefault(); // Evitar el comportamiento predeterminado del enlace
                                    if (confirm('¿Estás seguro de que deseas eliminar tu cuenta?')) {
                                        eliminarCuenta();
                                    }
                                });

                                // Función para enviar la solicitud de eliminación de cuenta al servidor
                                function eliminarCuenta() {
                                    fetch('/eliminarCuenta', {
                                        method: 'DELETE' // Usar el método DELETE para eliminar la cuenta
                                    })
                                        .then(response => {
                                            if (!response.ok) {
                                                throw new Error('Respuesta del servidor no válida');
                                            }
                                            return response.json();
                                        })
                                        .then(data => {
                                            alert(data.message); // Mostrar mensaje de éxito
                                            cerrarSesion(); // Llamar a la función para cerrar sesión después de eliminar la cuenta
                                        })
                                        .catch(error => console.error('Error al eliminar cuenta de usuario:', error));
                                }

                                // Función para cerrar sesión
                                function cerrarSesion() {
                                    fetch('/cerrarSesion')
                                        .then(response => {
                                            if (!response.ok) {
                                                throw new Error('Respuesta del servidor no válida');
                                            }
                                            return response.json();
                                        })
                                        .then(data => {
                                            alert(data.message); // Mostrar mensaje de éxito
                                            window.location.href = './inicio'; // Redirigir a la página de inicio después de cerrar sesión
                                        })
                                        .catch(error => console.error('Error al cerrar sesión:', error));
                                }
                            });
                        </script>


                        <li><a href="shop-cart">Carrito</a></li>
